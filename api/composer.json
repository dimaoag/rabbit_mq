{
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": ">=7.1",
    "ext-json": "^1.5",
    "ext-mbstring": "^7.1",
    "doctrine/orm": "^2.6",
    "ramsey/uuid": "^3.8",
    "laminas/laminas-diactoros": "^2.0",
    "laminas/laminas-config-aggregator": "^1.2",
    "psr/http-server-handler": "^1.0",
    "slim/slim": "^3.11",
    "symfony/dotenv": "^4.1"

  },
  "require-dev": {
    "phpunit/phpunit": "^7.4",
    "roave/security-advisories": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Api\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Api\\Test\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always"
  }
}
